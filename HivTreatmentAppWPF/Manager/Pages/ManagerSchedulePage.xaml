<Page x:Class="HivTreatmentAppWPF.Manager.ManagerSchedulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="950"
      Title="ManagerSchedule"
      Background="#F5F6FA">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="40">
            <Border Background="White"
                    Padding="40"
                    CornerRadius="12"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    Effect="{StaticResource CardShadow}">

                <StackPanel>

                    <!-- Header -->
                    <Border Background="#0096FF"
                            CornerRadius="6"
                            Padding="10"
                            Margin="0 0 0 30">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="📋"
                                       FontSize="28"
                                       Margin="0 5 10 0"/>
                            <TextBlock Text="Bảng phân công lịch làm việc"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Search Input -->
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                        <TextBlock Text="Tìm kiếm tên bác sĩ:"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   Margin="0 0 8 0"/>
                        <TextBox x:Name="SearchBox"
                                Width="300"
                                Height="28"
                                Padding="5"
                                VerticalAlignment="Center"
                                TextChanged="SearchBox_TextChanged"/>
                    </StackPanel>
                    
                    <!-- DataGrid -->
                    <DataGrid x:Name="ScheduleDataGrid"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              Margin="0"
                              FontSize="14"
                              RowBackground="White"
                              AlternatingRowBackground="#F9F9F9"
                              GridLinesVisibility="None"
                              BorderThickness="1"
                              BorderBrush="#E0E0E0"
                              ColumnWidth="*"
                              ItemsSource="{Binding}"
                              MouseDoubleClick="ScheduleDataGrid_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Mã phòng khám" Binding="{Binding RoomCode}" />
                            <DataGridTextColumn Header="Ngày" Binding="{Binding Date, StringFormat={}{0:dd/MM/yyyy}}" />
                            <DataGridTextColumn Header="Ca" Binding="{Binding SlotString}" />
                            <DataGridTextColumn Header="Bác sĩ" Binding="{Binding DoctorName}" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0">
                        <Button Content="Tạo"
                                Style="{StaticResource NavButtonStyle}"
                                Click="AddButton_Click"/>

                        <Button Content="Xóa"
                                Style="{StaticResource DangerButtonStyle}"
                                Click="DeleteButton_Click"/>
                    </StackPanel>

                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>
