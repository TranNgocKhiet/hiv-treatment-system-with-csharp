<Page x:Class="HivTreatmentAppWPF.Manager.UserListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="900" d:DesignWidth="950"
      Title="UserListPage">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="40">
            <Border Background="White"
                    CornerRadius="12"
                    Padding="30"
                    BorderBrush="#DDD"
                    BorderThickness="1"
                    Effect="{StaticResource CardShadow}">

                <StackPanel>
                    <!-- Header -->
                    <Border Background="#0096FF"
                            CornerRadius="8"
                            Padding="12"
                            Margin="0 0 0 20">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="👤" FontSize="22" Margin="0 0 10 0"/>
                            <TextBlock Text="Danh sách người dùng"
                                       Foreground="White"
                                       FontSize="20"
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <!-- Search Box -->
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                        <TextBlock Text="Tìm kiếm họ và tên, số điện thoại, email:"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   Margin="0 0 8 0"/>
                        <TextBox x:Name="SearchBox"
                                 Width="300"
                                 Height="28"
                                 Padding="5"
                                 VerticalAlignment="Center"
                                 TextChanged="SearchBox_TextChanged"/>
                    </StackPanel>

                    <!-- DataGrid -->
                    <DataGrid x:Name="UserDataGrid"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              FontSize="14"
                              AlternatingRowBackground="#f5f5f5"
                              GridLinesVisibility="Horizontal"
                              RowBackground="White"
                              BorderBrush="#E0E0E0"
                              BorderThickness="1"
                              ColumnWidth="*"
                              MinHeight="400"
                              MouseDoubleClick="UserDataGrid_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Vai trò" Binding="{Binding RoleName}" />
                            <DataGridTextColumn Header="Họ và tên" Binding="{Binding FullName}" />
                            <DataGridTextColumn Header="Số điện thoại" Binding="{Binding PhoneNumber}" />
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" />
                            <DataGridTemplateColumn Header="Trạng thái tài khoản">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding AccountStatus}"
                                                   Padding="4"
                                                   HorizontalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding AccountStatus}" Value="Đang hoạt động">
                                                            <Setter Property="Background" Value="LightGreen"/>
                                                            <Setter Property="Foreground" Value="Black"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding AccountStatus}" Value="Bị khóa">
                                                            <Setter Property="Background" Value="LightCoral"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                Margin="0 20 0 0">
                        <Button Content="Tạo"
                                Width="100"
                                Height="35"
                                Margin="5"
                                Style="{StaticResource NavButtonStyle}"
                                Click="AddButton_Click"/>
                        <Button Content="Xóa"
                                Width="100"
                                Height="35"
                                Margin="5"
                                Style="{StaticResource DangerButtonStyle}"
                                Click="DeleteButton_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>
